/*  Ang bubble sort ay isa sa mga sorting algorithms
    na ginagamit para i arrange ang isang list o
    collection. Ang algorithm ng isang bubble sort ay
    pinagkukumpara ang value ng dalawang magkatabing
    elements ng list at pinagpapalit ang kanilang pwesto
    base sa condition na ating iseset(increasing or
    decreasing)

*/

import java.util.*;

public class Main
{
    public static void main(String[] args)
    {

    //gumawa ng object ng scanner
         Scanner input = new Scanner(System.in);
    //kunin ang array size
         System.out.print("Enter Array Size: ");
    /*gumawa ng bagong array at iset ang size depende sa
    input ng user*/
         int arraySize = input.nextInt();
         int [] numberList = new int[arraySize];
        
    // gamit ang for loop, mag insert ng value sa array
         for(int i = 0; i < arraySize; i++){
    
             System.out.print("Input " + (i+1) +": ");
             numberList[i] = input.nextInt();
         }
         //display ang initial na list
         System.out.println("\nInitial list: ");
    /*gamit ang enhanced for loop(for-each loop),
      idisplay ang elements*/
         for(int number : numberList){
             System.out.print(number + " ");
         }
         /*gumawa ng temporary variable na maghohold ng value
    para sa swapping
    */
         int temp = 0;
    /*gumawa ng 2 loops(outer loop para sa sorted list
    at inner loop para sa comparison ng adjacent na 
    elements) para sa gagawing comparison ng first at 
    second element.*/
         for(int i = 0; i< numberList.length-1; i++){
             for( int j = 0; j < numberList.length-1-i; j++){
    
    /*condition na kapag ang unang element ay mas malaki
    sa second element
    */
                 if(numberList[j] > numberList[j+1]){
        /* i set ang value ng temp sa first number
        iset anf value ng first number sa secobd number
        iset ang value ng second number sa temp
        */
                     temp = numberList[j];
                     numberList[j] = numberList[j+1];
                     numberList[j+1] = temp;
                 }
             }
         }
        System.out.println("\nSorted list: ");
        for(int number : numberList){
            System.out.print(number + " ");
        }
    }
}
